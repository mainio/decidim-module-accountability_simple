<div class="column" id="<%= dom_id(model) %>">
  <div class="card <%= card_classes %>">
    <%= render :label if has_label? %>
    <%= render :top if render_top? %>
    <%= render :image if has_image? %>
    <div class="card__content">
      <%= render :header if has_header? %>

      <div class="card__text">
        <div class="card__text--paragraph">
          <%= render :badge if has_badge? %>
          <%= description %>
        </div>
        <%= render :progress if display_progress? %>
      </div>

      <%= render :authors %>
      <%= render :tags %>
    </div>

    <div class="card__bottom">
      <%= render :footer %>
      <%= render :data if display_data? %>
      <%= render :status %>
    </div>
  </div>
</div>
