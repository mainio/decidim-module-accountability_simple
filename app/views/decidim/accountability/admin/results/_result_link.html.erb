<% result_link = form.object %>
<div class="card result-link-item" id="<%= tabs_id %>-field">
  <div class="card-divider result-link-item-divider">
    <h2 class="card-title">
      <span>
        <%== "#{icon("move")} #{t(".result_link")}" %>
      </span>

      <button class="button small alert hollow move-up-result-link-item button--title">
        <%== "#{icon("arrow-top")} #{t(".up")}" %>
      </button>

      <button class="button small alert hollow move-down-result-link-item button--title">
        <%== "#{icon("arrow-bottom")} #{t(".down")}" %>
      </button>

      <button class="button small alert hollow remove-result-link-item button--title">
        <%= t(".remove") %>
      </button>
    </h2>
  </div>

  <div class="card-section">
    <div class="grid-x">
      <div class="cell auto">
        <%= form.translated :text_field, :label, tabs_id: tabs_id %>
      </div>
      <div class="cell auto">
        <%= form.translated :text_field, :url, tabs_id: tabs_id %>
      </div>
    </div>

    <%= form.hidden_field :id %>
    <%= form.hidden_field :position, value: result_link.position || 0 %>
    <%= form.hidden_field :deleted %>
  </div>
</div>
