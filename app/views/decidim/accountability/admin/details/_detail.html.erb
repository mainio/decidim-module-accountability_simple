<% detail = form.object %>
<div class="card result-detail-item" id="<%= tabs_id %>-field">
  <div class="form__wrapper" data-component="accordion">
    <div class="card-divider result-detail-item-divider">
      <h2 class="card-title flex items-center">
        <span>
          <%== "#{icon("drag-move-2-fill")} #{t(".detail")}" %>
        </span>

        <span class="ml-auto flex flex-row-reverse items-center gap-2">
          <button class="button button__sm button__transparent-secondary small alert hollow move-up-result-detail-item button--title">
            <%= icon("arrow-up-line") %>
            <%= t(".up") %>
          </button>

          <button class="button button__sm button__transparent-secondary small alert hollow move-down-result-detail-item button--title">
            <%= icon("arrow-down-line") %>
            <%= t(".down") %>
          </button>

          <button class="button button__sm button__transparent-secondary small alert hollow remove-result-detail-item button--title">
            <%= icon("delete-bin-line") %>
            <%= t(".remove") %>
          </button>
        </span>
      </h2>
    </div>

    <div class="card-section">
      <%= render "detail_fields", tabs_id: tabs_id, form: form, detail: detail %>
    </div>
  </div>
</div>
